.container {
  padding: 20rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.stats-area {
  display: flex;
  justify-content: space-between;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.1);
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  display: block;
  font-size: 42rpx;
  font-weight: bold;
  color: #4a86e8;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.control-area {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.btn {
  width: 48%;
  height: 90rpx;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  transition: all 0.3s;
}

.start-btn {
  background: #5cb85c;
}

.reset-btn {
  background: #e74c3c;
}

.btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.list-area {
  background: white;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.05);
}

.list-header {
  display: flex;
  justify-content: space-between;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 32rpx;
  font-weight: bold;
}

.attendance-status {
  font-size: 28rpx;
  color: #4a86e8;
  font-weight: normal;
}

.student-list {
  max-height: 60vh;
  overflow-y: auto;
}

.student-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.student-item.present {
  background: #f8fff8;
}

.student-item.absent {
  background: #fff8f8;
}

.student-item.leave {
  background: #f8fbff;
}

.student-name {
  font-size: 34rpx;
  flex: 1;
}

.attendance-actions {
  display: flex;
}

.action-btn {
  padding: 12rpx 20rpx;
  margin-left: 15rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: white;
  transition: all 0.3s;
}

.action-btn.present {
  background: #5cb85c;
}

.action-btn.absent {
  background: #e74c3c;
}

.action-btn.leave {
  background: #f0ad4e;
}

.action-btn.active {
  transform: scale(1.05);
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
}

.empty-tip {
  text-align: center;
  padding: 60rpx 30rpx;
  color: #999;
  font-size: 32rpx;
}